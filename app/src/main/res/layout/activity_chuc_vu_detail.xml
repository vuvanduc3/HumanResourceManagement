<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9FAFB">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết Chức Vụ"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="16dp" />

    <!-- Card for Mã chức vụ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã chức vụ"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingBottom="8dp"
                android:textStyle="bold" />

            <!-- Mã chức vụ -->
            <TextView
                android:id="@+id/tvMaChucVuDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Tên chức vụ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên chức vụ"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingBottom="8dp"
                android:textStyle="bold" />

            <!-- Tên chức vụ -->
            <TextView
                android:id="@+id/tvTenCVDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Hệ số chức vụ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hệ số chức vụ"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingBottom="8dp"
                android:textStyle="bold" />

            <!-- Hệ số chức vụ -->
            <TextView
                android:id="@+id/tvHSCSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
