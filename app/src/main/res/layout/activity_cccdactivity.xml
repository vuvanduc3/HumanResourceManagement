<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="left"
    android:background="#f5f5f5">

    <!-- TextView: "Số CCCD" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số CCCD"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- TextView: Số CCCD màu xanh -->
    <TextView
        android:id="@+id/cccd_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789012"
        android:textSize="20sp"
        android:textColor="#0000FF"
        android:layout_marginBottom="20dp"/>

    <!-- TextView: "Mặt trước" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mặt trước"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- ImageView: Mặt trước của CCCD -->
    <ImageView
        android:id="@+id/front_cccd_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/add_cccd"
    android:scaleType="centerCrop"
    android:layout_marginBottom="20dp"
    android:contentDescription="Mặt trước CCCD"/>

    <!-- TextView: "Mặt sau" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mặt sau"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- ImageView: Mặt sau của CCCD -->
    <ImageView
        android:id="@+id/back_cccd_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/add_cccd"
    android:scaleType="centerCrop"
    android:contentDescription="Mặt sau CCCD"/>

</LinearLayout>
